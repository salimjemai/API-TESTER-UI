<Page
    x:Class="API_TESTER_UI.Pages.CompanyDatabase.GetAircrafts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:API_TESTER_UI.Pages.CompanyDatabase"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window"
    Title="GetAircrafts"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <ListView
            x:Name="AirportsGrid"
            Grid.Row="1"
            Grid.ColumnSpan="5"
            Panel.ZIndex="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="300"
                        DisplayMemberBinding="{Binding Airport}"
                        Header="Airport" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Width="59"
            Height="20"
            Margin="0,0,1800,8500"
            Panel.ZIndex="2"
            Click="ClosAirportsForm_Click"
            Content="Clear"
            FontWeight="Bold"
            Foreground="DarkBlue" />
    </Grid>
</Page>
